{
    "name": "angular-cli-task-provider",
    "displayName": "Angular CLI Task Provider",
    "description": "This is used by Angular IDE by CodeMix (https://www.genuitec.com/products/codemix/) to provide task support for running Angular CLI apps using `ng serve`, `ng build`, etc,.",
    "version": "1.2.0",
    "publisher": "Genuitec",
    "icon": "icon.png",
    "license": "MIT",
    "author": {
        "email": "info@genuitec.com",
        "name": "Genuitec, LLC",
        "url": "https://www.genuitec.com/"
    },
    "repository": {
        "url": "https://github.com/Genuitec/vscode-angular-cli-task-provider"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "keywords": [
        "Angular",
        "CLI",
        "Task",
        "Provider"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./out/extension",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "angularcli",
                "properties": {
                    "option": {
                        "type": "string",
                        "enum": [
                            "build",
                            "build-watch",
                            "serve"
                        ]
                    },
                    "angular": {
                        "type": "string"
                    },
                    "bin": {
                        "type": "string"
                    },
                    "args": {
                        "type": "array"
                    }
                }
            }
        ],
        "problemPatterns": [
            {
                "name": "tsc-angular-cli",
                "regexp": "^ERROR in ([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "code": 5,
                "message": 6
            }
        ],
        "problemMatchers": [
            {
                "name": "tsc-angular-cli",
                "label": "%typescript.problemMatchers.tsc.label%",
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc-angular-cli"
            },
            {
                "name": "tsc-angular-cli-watch",
                "label": "%typescript.problemMatchers.tsc.label%",
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc-angular-cli",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "ℹ ｢wdm｣: Compiling...",
                    "endsPattern": "ℹ ｢wdm｣: (Failed to compile.|Compiled successfully.)"
                  }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "jsonc-parser": "^2.0.1"
    }
}
